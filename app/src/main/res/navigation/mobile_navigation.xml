<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_pocetna">

  <fragment
    android:id="@+id/navigation_novioglasprozor"
    android:name="vukan.com.apursp.ui.novioglasprozor.NovioglasprozorFragment"
    android:label="Novi Oglas"
    tools:layout="@layout/fragment_novioglasprozor">

    <argument
      android:name="id"
      android:defaultValue="0"
      app:argType="integer" />
  </fragment>

    <fragment
        android:id="@+id/navigation_pocetna"
        android:name="vukan.com.apursp.ui.pocetna.PocetnaFragment"
        android:label="@string/title_pocetna"
        tools:layout="@layout/fragment_pocetna" >

        <action
            android:id="@+id/pocetnaToProizvodFragmentAction"
            app:destination="@id/navigation_proizvod"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/navigation_poruke"
        android:name="vukan.com.apursp.ui.poruke.PorukeFragment"
        android:label="@string/title_poruke"
        tools:layout="@layout/fragment_poruke" >

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
 

  <fragment
    android:id="@+id/navigation_novioglas"
    android:name="vukan.com.apursp.ui.novioglas.NovioglasFragment"
    android:label="@string/title_novioglas"
    tools:layout="@layout/fragment_novioglas" >

    <action
      android:id="@+id/noviOglasToNovioglasprozorFragmentAction"
      app:destination="@id/navigation_novioglasprozor"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    <!--                app:popUpTo="@+id/main_fragment"-->
    <!--                app:popUpToInclusive="true" -->
  </fragment>

    <fragment
        android:id="@+id/navigation_obavestenja"
        android:name="vukan.com.apursp.ui.obavestenja.ObavestenjaFragment"
        android:label="@string/title_obavestenja"
        tools:layout="@layout/fragment_obavestenja" />


    <fragment
        android:id="@+id/navigation_mojioglasi"
        android:name="vukan.com.apursp.ui.mojioglasi.MojioglasiFragment"
        android:label="@string/title_mojioglasi"
        tools:layout="@layout/fragment_mojioglasi" />

    <fragment
        android:id="@+id/navigation_proizvod"
        tools:layout="@layout/fragment_proizvod"
        android:name="vukan.com.apursp.ui.proizvod.ProizvodFragment"
        android:label="ProizvodFragment" >

        <argument
            android:name="product_id"
            app:argType="string"
            android:defaultValue="0" />
    </fragment>

</navigation>
