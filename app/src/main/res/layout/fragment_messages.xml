<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.messages.MessagesFragment">

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/btnSend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="73sp"
    android:clickable="true"
    android:focusable="true"
    app:fabSize="mini"
    app:srcCompat="@drawable/ic_sendbutton" />



  <androidx.cardview.widget.CardView
    android:id="@+id/text_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="70sp"
    android:layout_toStartOf="@id/btnSend"
    android:layout_toLeftOf="@id/btnSend"
    android:gravity="center_vertical|center_horizontal"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="2dp"
    android:layout_marginLeft="5dp"
    app:cardUseCompatPadding="true">

    <EditText
      android:id="@+id/messageField"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white"
      android:gravity="top"
      android:hint="type message.."
      android:padding="10dp" />

  </androidx.cardview.widget.CardView>


  <TextView
    android:id="@+id/text_poruke"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="LOOOL"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center_horizontal"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/text_layout"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="16dp">

    <ListView
      android:id="@+id/list_of_messages"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:clickable="true"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:scrollbars="vertical"
      android:background="#dff7e6"
      android:cacheColorHint="#00000000"
      android:listSelector="#00000000"
      android:divider="@android:color/transparent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_poruke" >

    </ListView>


  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</RelativeLayout>
