<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/novioglasid"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.novioglas.NovioglasFragment">


  <TextView
    android:id="@+id/slogan_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="27dp"
    android:gravity="center_horizontal"
    android:text="Odabrite kategoriju"
    android:textAlignment="center"
    android:textSize="26dp"
    android:textStyle="bold" />


  <TextView
    android:id="@+id/text_novioglas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center_horizontal"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


  <LinearLayout
    android:id="@+id/linear1_ispisi1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_below="@id/slogan_category"
    android:layout_marginTop="50dp"
    android:gravity="left"
    android:orientation="vertical">



    <ImageView
      android:id="@+id/odeca"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/shirt"  />



    <TextView
      android:id="@+id/t1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_below="@id/odeca"
      android:text="Odeća"
      android:textSize="14sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/mobilni"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/mobile"
      />

    <TextView
      android:id="@+id/t5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/mobilni"
      android:text="Telefoni"
      android:gravity="center"
      android:textSize="14sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/bicikl"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/byc"
      />


    <TextView
      android:id="@+id/t9"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/bicikl"
      android:orientation="horizontal"
      android:text="Bicikl"
      android:gravity="center"
      android:textSize="14sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/knjige"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/book"
      />


    <TextView
      android:id="@+id/t13"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/knjige"
      android:orientation="horizontal"
      android:gravity="center"
      android:text="Knjige"
      android:textSize="14sp"
      android:textStyle="bold" />
  </LinearLayout>













  <LinearLayout
    android:id="@+id/linearl_ispisi2"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_below="@id/slogan_category"
    android:layout_marginTop="50dp"
    android:layout_toRightOf="@id/linear1_ispisi1"
    android:gravity="left"
    android:orientation="vertical">


    <ImageView
      android:id="@+id/obuca"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/boot"
      />



    <TextView
      android:id="@+id/t2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_below="@id/obuca"
      android:text="Obuća"
      android:textSize="16sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/kompjuter"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/keyboard"
      />

    <TextView
      android:id="@+id/t6"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/kompjuter"
      android:text="Računari"
      android:gravity="center"
      android:textSize="16sp"
      android:textStyle="bold" />



    <ImageView
      android:id="@+id/igracke"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/game"
      />


    <TextView
      android:id="@+id/t10"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/igracke"
      android:orientation="horizontal"
      android:text="Igračke"
      android:gravity="center"
      android:textSize="16sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/biljke"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/plant"
      android:contentDescription="mage_description"

      />



    <TextView
      android:id="@+id/t14"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/biljke"
      android:orientation="horizontal"
      android:gravity="center"
      android:text="Biljke"
      android:textSize="16sp"
      android:textStyle="bold" />
  </LinearLayout>







  <LinearLayout
    android:id="@+id/linearl_ispisi3"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_below="@id/slogan_category"
    android:layout_marginTop="50dp"
    android:layout_toRightOf="@id/linearl_ispisi2"
    android:gravity="left"
    android:orientation="vertical">



    <ImageView
      android:id="@+id/aksesoari"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/bag"
      />




    <TextView
      android:id="@+id/t3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_below="@id/aksesoari"
      android:text="Dodaci"
      android:textSize="16sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/tehnika"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/cooker"
      />


    <TextView
      android:id="@+id/t7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tehnika"
      android:text="Tehnika"
      android:gravity="center"
      android:textSize="16sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/sport"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/gym"
      />


    <TextView
      android:id="@+id/t11"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/sport"
      android:orientation="horizontal"
      android:text="Sport"
      android:gravity="center"
      android:textSize="16sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/ljubimci"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/dog"
      />


    <TextView
      android:id="@+id/t15"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/ljubimci"
      android:orientation="horizontal"
      android:gravity="center"
      android:text="Ljubimci"
      android:textSize="16sp"
      android:textStyle="bold" />
  </LinearLayout>









  <LinearLayout
    android:id="@+id/linearl_ispisi4"
    android:layout_marginRight="10dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_below="@id/slogan_category"
    android:layout_marginTop="50dp"
    android:layout_toRightOf="@id/linearl_ispisi3"
    android:orientation="vertical">



    <ImageView
      android:id="@+id/decije"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/baby"
      />


    <TextView
      android:id="@+id/t4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_below="@id/decije"
      android:text="Za decu"
      android:textSize="16sp"
      android:textStyle="bold" />




    <ImageView
      android:id="@+id/namestaj"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/orman"
      />


    <TextView
      android:id="@+id/t8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/namestaj"
      android:text="Nameštaj"
      android:gravity="center"
      android:textSize="16sp"
      android:textStyle="bold" />


    <ImageView
      android:id="@+id/muzika"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/music"
      />



    <TextView
      android:id="@+id/t12"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/muzika"
      android:orientation="horizontal"
      android:text="Muzika"
      android:gravity="center"
      android:textSize="16sp"
      android:textStyle="bold" />



    <ImageView
      android:id="@+id/uredjenje"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/paint"
      />



    <TextView
      android:id="@+id/t16"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/uredjenje"
      android:orientation="horizontal"
      android:gravity="center"
      android:text="Uređenje"
      android:textSize="16sp"
      android:textStyle="bold" />
  </LinearLayout>





</RelativeLayout>
